<?xml version="1.0" encoding="utf-8"?><!--  specific fixed width and height size use on .java -->
<com.garlicg.screenrecord4cm.magnet.IndicatorWindow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <ImageView
        android:id="@+id/trashImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/circle_button_red"
        android:scaleType="center"
        android:src="@drawable/ic_close_32dp"
        android:tint="#fff" />

    <ImageView
        android:id="@+id/settingsImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/circle_button_red"
        android:scaleType="center"
        android:src="@drawable/ic_settings_32dp"
        android:tint="#fff" />


</com.garlicg.screenrecord4cm.magnet.IndicatorWindow>