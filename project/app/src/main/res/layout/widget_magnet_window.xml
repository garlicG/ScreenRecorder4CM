<?xml version="1.0" encoding="utf-8"?>
<com.garlicg.screenrecordct.magnet.MagnetWindow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/viewRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/record_button"
        android:padding="3dp">

        <ImageView
            android:id="@+id/innerFrame"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/record_button_inner_frame"
            android:src="@drawable/record_button_inner_cover" />

        <ImageView
            android:id="@+id/magnetIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="center"
            android:tintMode="src_in"
            android:src="@drawable/ic_action_record" />

        <TextView
            android:id="@+id/magnetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="16dp" />
    </FrameLayout>


</com.garlicg.screenrecordct.magnet.MagnetWindow>