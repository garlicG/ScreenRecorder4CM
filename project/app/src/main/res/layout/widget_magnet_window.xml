<?xml version="1.0" encoding="utf-8"?>
<com.garlicg.screenrecordct.magnet.MagnetWindow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/viewRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button_white"
        android:duplicateParentState="true"
        android:padding="3dp">

        <ImageView
            android:id="@+id/magnetImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_inner_frame"
            android:duplicateParentState="true"
            android:src="@drawable/circle_inner_circle" />

        <TextView
            android:id="@+id/magnetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#f00"
            android:textSize="16dp" />
    </FrameLayout>


</com.garlicg.screenrecordct.magnet.MagnetWindow>